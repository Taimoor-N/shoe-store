<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Used LinearLayout since all views are aligned in a single direction (vertically) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_welcome_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_default"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginEnd="@dimen/margin_default"
                android:padding="@dimen/padding_default"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_desc_iv_welcome_logo"
                android:src="@drawable/img_logo" />

            <TextView
                android:id="@+id/tv_welcome_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_default"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginEnd="@dimen/margin_default"
                android:text="@string/text_welcome"
                android:textSize="@dimen/text_size_default"
                tools:ignore="VisualLintLongText" />

            <TextView
                android:id="@+id/tv_welcome_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_default"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginEnd="@dimen/margin_default"
                android:text="@string/text_welcome_instructions"
                android:textSize="@dimen/text_size_default" />

            <Button
                android:id="@+id/btn_welcome_instructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_large"
                android:text="@string/label_instructions" />

        </LinearLayout>

    </ScrollView>

</layout>
